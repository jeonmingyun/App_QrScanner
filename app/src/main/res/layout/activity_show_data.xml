<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ShowDataActivity"
    android:background="@color/colorBase">

    <android.support.v7.widget.Toolbar
        android:id="@+id/show_data_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_title_20"
            android:text="@string/qr_data">

        </TextView>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_title_20"
            android:text="@string/search_date"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <ListView
        android:id="@+id/qr_data_list"
        android:textFilterEnabled="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorBase"
        android:dividerHeight="15dp"
        android:padding="15dp"/>

</LinearLayout>